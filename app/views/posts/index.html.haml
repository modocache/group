.span3
  .well.sidebar-nav
    %ul.nav.nav-list
      %li.nav-header= t('.recent')
      - for post in @recent_posts
        %li= link_to post.title, post
.span9
  - if @posts.size > 0
    %table.table.table-hover.table-striped
      %tbody= render @posts
  - else
    .alert.alert-info= t('.none_to_display')
